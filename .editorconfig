# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.{yml,yaml,toml}]
indent_size = 2

[*.md]
indent_size = 4

[Makefile]
indent_style = tab
